<?xml version="1.0" encoding="utf-8"?> 
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.vijayhibernate.HibernatePOJO" table="vijaykiranslog">
		<meta attribute="class-description">
			This class contains the employee detail.
		</meta>
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="title" column="title" type="string" />
		<property name="artist" column="artist" type="string" />
		<property name="album" column="album" type="string" />
		<property name="genre" column="genre" type="string" />
		<property name="releasedate" column="releasedate" type="string" />
		<property name="duration" column="duration" type="int" />
		<property name="author" column="author" type="string" />
		<property name="playdate" column="playdate" type="timestamp" />
		<property name="rating" column="rating" type="int" />
	</class>
</hibernate-mapping>